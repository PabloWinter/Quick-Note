<!-- Displaying all user notes from database in bootstrap cards -->
<div class="row">
    {{#each userNotes}}
    <div class="col-md-4">
        <div class="card mb-5" style="width: 21rem;">
            <div class="card-body">
                <h4 class="card-title mb-3">{{title}}</h4>
                <p class="card-text mb-5">{{description}}</p>
                <a href="/notes/edit/{{id}}" class="btn btn-sm btn-primary ml-5"><i class="fa fa-edit"></i> Edit Note</a>
                <a href="#" class="btn btn-sm btn-warning"><i class="fa fa-trash"></i> Delete Note</a>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto border border-success mt-5">
        <div class="card-body">
            <p class="lead"> You do not have any notes yet.</p>
            <a class="btn btn-success btn-block" href="/notes/create"><i class="fa fa-edit"></i> Create a new note</a>
        </div>
    </div>
    {{/each}}
</div>

